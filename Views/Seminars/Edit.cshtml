@model SeminarManagementSystem.Models.Seminar

@{
    ViewBag.Title = "Edit";
}

<div>
    <h1 class="text-center text-info fw-bold">Edit Seminar</h1>
    <hr />
</div>
<div class="div-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div>
            @Html.LabelFor(model => model.SeminarTypeId)
            @Html.DropDownList("SeminarTypeId", null, htmlAttributes: new { @class = "" })
            @Html.ValidationMessageFor(model => model.SeminarTypeId, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.Status)
            @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.SeminarDate)
            @Html.EditorFor(model => model.SeminarDate)
            @Html.ValidationMessageFor(model => model.SeminarDate, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="div-center">
            <input type="submit" value="Save" class="button button-edit" />
            @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "button button-back" })
        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
